 			</if>	
 		</set>
 		<where>
 			<if test="id!=null">
 				id=#{id}
 			</if>
 		</where> -->
 	</update>
	
	<delete id="deleteOneTestPoint" parameterType="String" >
		delete from testPoint where tpid=#{id}
	</delete>
	
	<select id="getAllGrade" resultType="String">
		select DISTINCT(grade) from testPoint
	</select>
	
</mapper>
            <if test="bid != null">
                bid,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="imgUrl != null">
                imgUrl,
            </if>
            <if test="sort != null">
                sort,
            </if>
            <if test="article != null">
                article,
            </if>

            <if test="category != null">
                category,
            </if>
            <if test="belong != null">
                belong,
            </if>
            <if test="subject != null">

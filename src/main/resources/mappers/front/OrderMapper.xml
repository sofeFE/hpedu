            </if>
            <if test="opayTime!=null" >
                opayTime = #{opayTime}
            </if> 
            <if test="oisPay!=null" >
                oisPay = #{oisPay}
            </if> 
            <if test="orderNo!=null" >
                orderNo = #{orderNo}
            </if>
            <!--<if test="uid!=null" >
                uid = #{uid}
            </if>
            <if test="vid!=null" >
                vid = #{vid}
            </if>
            <if test="vclassify!=null" >
                vclassify = #{vclassify}
            </if>-->
            <if test="payStyle!=null" >
                payStyle = #{payStyle}
            </if>
            <if test="isKill!=null" >
                isKill = #{isKill}
            </if>
            
           

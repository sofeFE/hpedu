    <update id="updateOrderPayStatus" parameterType="String">
	  update orders set oisPay=1,opayTime=now() where orderNo=#{arg0}
	</update>

    <update id="updateOrderPayMoney" parameterType="String">
	  update orders set omoney=#{arg1},orderNo=#{arg2},payStyle=#{arg3} where oid=#{arg0} 
	</update>
    
    <select id="findOrderByParams" parameterType="String" resultMap="BaseResultMap">
	   select * from orders where uid=#{arg0} and vid=#{arg1} and vclassify=#{arg2} and oisPay=#{arg3}
	</select>
    <select id="findOrderByOrderNo" parameterType="String" resultMap="BaseResultMap">
	   select * from orders where orderNo=#{arg0}
	</select>
</mapper>
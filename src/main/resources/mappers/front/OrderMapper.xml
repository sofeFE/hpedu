                #{article},
            </if>

            <if test="category != null">
                #{category},
            </if>
            <if test="belong != null">
                #{belong},
            </if>
            <if test="subject != null">
                #{subject},
            </if>
            <if test="grade != null">
                #{grade},
            </if>
            <if test="classify != null">
                #{classify},
            </if>

        </trim>
    </insert>
    <update id="updateBanner" parameterType="com.hpedu.web.core.order.pojo.Banner">
        update banner
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="imgUrl != null">
                imgUrl = #{imgUrl},
            </if>
            belong = #{belong},
            <if test="belong == 0">
                article = #{article},
            </if>
            <if test="belong == 1">
                category = #{category},
                subject = #{subject},
                grade = #{grade},
                classify = #{classify}
            </if>
        </set>
        where bid = #{bid}
    </update>
